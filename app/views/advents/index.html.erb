<link type="stylesheet" href="advents.css">
<h1>Listing advents</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Picture</th>
      <th>Picture</th>
      <th>Picture</th>
      <th>Picture</th>
      <th>Picture</th>
      <th>Picture</th>
      <th>Picture</th>
      <th>Picture</th>
      <th>Picture</th>
      <th>Picture</th>
      <th>Picture</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% counter = 0 %>
      <% @advents.each do |advent| %>
        <% while counter < 10 do %>
        <td><%= advent.date %></td>
        <% counter += 1 %>
      <% end %>
      <% end %>
    </tr>
    <tr>
    <% @advents.each do |advent| %>
        <td><%= advent.title %></td>
    <% end %>
    </tr>
    <tr>
    <% @advents.each do |advent| %>
        <td><%= advent.description %></td>
    <% end %>  
    </tr>
    <tr>
    <% @advents.each do |advent| %>   
        <td width="50" height="50"><%= image_tag advent.picture %></td>
    <% end %> 
    </tr> 
  </tbody>
</table>

<br>

<%= link_to 'New Advent', new_advent_path %>
